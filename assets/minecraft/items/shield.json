{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:custom_name",
    "cases": [
      {
        "when": {
          "text": "Left arm rotation",
          "color": "white",
          "italic": false
        },
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:component",
          "component": "minecraft:enchantment_glint_override",
          "cases": [
            {
              "when": false,
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/left_arm_rotation"
              }
            },
            {
              "when": true,
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/left_arm_rotation_selected"
              }
            }
          ]
        }
      },
      {
        "when": {
          "text": "Left hand item",
          "color": "white",
          "italic": false
        },
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/left_hand_item_selected"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:condition",
      "on_false": {
        "type": "minecraft:special",
        "base": "minecraft:item/shield",
        "model": {
          "type": "minecraft:shield"
        }
      },
      "on_true": {
        "type": "minecraft:special",
        "base": "minecraft:item/shield_blocking",
        "model": {
          "type": "minecraft:shield"
        }
      },
      "property": "minecraft:using_item"
    
    }
  }
}
