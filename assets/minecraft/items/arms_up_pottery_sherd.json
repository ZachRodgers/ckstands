{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:enchantment_glint_override",
    "cases": [
      {
        "when": true,
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/scale_selected"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "property": "minecraft:component",
      "component": "minecraft:custom_name",
      "cases": [
        {
          "when": {
            "text": "Scale",
            "color": "white",
            "italic": false
          },
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/scale"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "minecraft:item/arms_up_pottery_sherd"
      }
    }
  }
}
