{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:enchantment_glint_override",
    "cases": [
      {
        "when": true,
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:component",
          "component": "minecraft:custom_name",
          "cases": [
            {
              "when": {
                "text": "Body rotation",
                "color": "white",
                "italic": false
              },
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/body_rotation_selected"
              }
            }
          ]
        }
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "property": "minecraft:component",
      "component": "minecraft:custom_name",
      "cases": [
        {
          "when": {
            "text": "Body rotation",
            "color": "white",
            "italic": false
          },
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/body_rotation"
          }
        },
        {
          "when": {
            "text": "Body item",
            "color": "white",
            "italic": false
          },
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/body_item"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "minecraft:item/leather_chestplate",
        "tints": [
          {
            "type": "minecraft:dye",
            "default": [
              0.62,
              0.4,
              0.25
            ]
          }
        ]
        
      }
    }
  }
}
