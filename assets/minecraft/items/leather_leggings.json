{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:enchantment_glint_override",
    "cases": [
      {
        "when": true,
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:component",
          "component": "minecraft:custom_name",
          "cases": [
            {
              "when": {
                "text": "Right leg rotation",
                "color": "white",
                "italic": false
              },
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/right_leg_rotation_selected"
              }
            },
            {
              "when": {
                "text": "Left leg rotation",
                "color": "white",
                "italic": false
              },
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/left_leg_rotation_selected"
              }
            }
          ]
        }
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "property": "minecraft:component",
      "component": "minecraft:custom_name",
      "cases": [
        {
          "when": {
            "text": "Left leg rotation",
            "color": "white",
            "italic": false
          },
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/left_leg_rotation"
          }
        },
        {
          "when": {
            "text": "Right leg rotation",
            "color": "white",
            "italic": false
          },
          "model": {
            "type": "minecraft:model",
            "model": "minecraft:item/right_leg_rotation"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "minecraft:item/leather_leggings"
      }
    }
  },
  "hand_animation_on_swap": false
}
